        {# old stuff (crud-selection-summary) #}
        <div class="crud-hide crud-selection-summary-{{ crud.htmlid }}">
        </div>

        <ul class="nav nav-list crud-selection crud-selection-{{ crud.htmlid }}" data-crud-table="{{ crud.htmlid }}">
            <li class="nav-header">Selection</li>
            <li>
                <p>
                    {% spaceless %}
                    <span class="triselect visible-selection">
                        <span class="tri-0">You have <span class="count">no</span> selected items</span>
                        <span class="tri-1">You have <span class="badge badge-info count">1</span> selected item</span>
                        <span class="tri-x">You have <span class="badge badge-info count">-</span> selected items</span>
                    </span>
                    <span class="invisible-selection crud-hide">
                        <span class="triselect">
                            <span class="tri-0"></span>
                            <span class="tri-1">, with <span class="badge count">1</span> item hidden</span>
                            <span class="tri-x">, with <span class="badge count">-</span> items hidden</span>
                        </span>
                    </span>.
                    {% endspaceless %}
                </p>
                {#
                <p class="crud-hide show-when-selection">
                    The following actions are available for your selection:
                </p>
                #}
            </li>
            <li>
                <p>
                    <!-- <a class="btn" href="#">Batch edit</a> -->
                    <div class="btn-group">
                        <!-- <a class="btn disabled crud-button-link" href="{{ ref(['_table/',crud.entity.name],view.queryarguments) }}">Show selection</a> -->
                        {% if is_granted(crud.entity.roles.update) %}
                        <a class="btn btn-success disabled crud-button-link" href="{{ ref(['_table/',crud.entity.name],view.queryarguments({'action':'edit-multiple'})) }}">Edit in sequence</a>
                        {% endif %}
                        {% if is_granted(crud.entity.roles.delete) %}
                        <a class="btn btn-danger disabled crud-button-confirm" data-modal-text-selector=".crud-selection-summary-{{ crud.htmlid }}" data-loading-text="Deleting&hellip;" href="{{ ref(['_table/',crud.entity.name],view.queryarguments({'action':'delete-multiple'})) }}">Delete</a>
                        {% endif %}
                    </div>
                </p>
                <p>
                    {# enable only for entities with feature Publishable #}
                    {#
                    <a class="btn" href="#">Publish now</a>
                    <a class="btn" href="#">Depublish now</a>
                    #}
                </p>
            </li>
        </ul>
