{% extends "Base/content_and_meta.html.twig" %}

{% block content %}

    {{ table|raw }}

    {% include "Include/pagination.html.twig" with {'view':view, 'link':['_table/',crud.entity], 'class':'crud-pagination'} %}

{% endblock %}


{% block meta_content %}
    
    <div class="well sidebar-nav crud-meta" data-crud-table="{{ crud.htmlid }}">

    {% for widget in widgets %}
    
        {% if not loop.first %}
        <hr />
        {% endif %}

        {% include widget %}

    {% endfor %}

    </div>

{% endblock %}

